	</head>
	<body class="landing">
		<!-- Header -->

         

        @if(Model.Name == "Home Section")
        {
            @:<header id="header" class="alt">
        }
        else
        {
            @:<header id="header">
        }
                <h1><a href="Home.html">Jesper Greve</a></h1>
                <a href="#nav">Menu</a>
            </header>


                @{
	                var selection = Umbraco.Content(Guid.Parse("fcab21d2-f8eb-4e19-a28d-3b787fa4fd6c"))
                    .Children("home")
                    .Where(x => x.IsVisible());
                }
            <!-- Nav -->
            <nav id="nav">
                <ul class="links">
	                @foreach (var item in selection)
	                {
		                <li>
			                <a href="@item.Url">@item.Name</a>
		                </li>
	                }
                    <!-- Drop Down -->
                    <div class="select-wrapper">
                        <select name="Projects" id="category">
                            <option><a href=/projects/>Project Link</a></option>
                            <option><a href="/projects/">Project A</a></option>
							<option value="/projects/">Projects</option>
							<option value="1">Project B</option>
							<option value="1">Project C</option>
						</select>
					</div>
                </ul>
            </nav>

            @RenderBody()

            <!-- Footer -->
            <footer id="footer">
                <div class="inner">
                    <ul class="icons">
                        <li>
                            <a href="#" class="icon fa-facebook">
                                <span class="label">Facebook</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="icon fa-twitter">
                                <span class="label">Twitter</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="icon fa-instagram">
                                <span class="label">Instagram</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="icon fa-linkedin">
                                <span class="label">LinkedIn</span>
                            </a>
                        </li>
                    </ul>
                    <ul class="copyright">
                        <li>&copy; @Model.Value("footerText").</li>
                        <li>@Model.Value("footerText", fallback: Fallback.ToDefaultValue, defaultValue: new HtmlString("footer"))</li>
                        <li>Images: <a href="http://unsplash.com">Unsplash</a>.</li>
                        <li>Design: <a href="http://templated.co">TEMPLATED</a>.</li>
                    </ul>

                </div>
            </footer>

            <!-- Scripts -->
            <script src="/scripts/jquery.min.js"></script>
            <script src="/scripts/skel.min.js"></script>
            <script src="/scripts/util.js"></script>
            <!--[if lte IE 8]><script src="/scripts/ie/respond.min.js"></script><![endif]-->
            <script src="/scripts/main.js"></script>

</body>
</html>